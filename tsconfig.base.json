{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
